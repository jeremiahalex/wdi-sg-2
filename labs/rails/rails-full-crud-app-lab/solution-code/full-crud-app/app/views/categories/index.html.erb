<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-bordered table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

